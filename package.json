{
  "name": "chatty",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@loadable/component": "^5.16.3",
    "@reduxjs/toolkit": "^2.1.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "axios": "^1.6.7",
    "date-fns": "^3.3.1",
    "emoji-picker-react": "^4.7.14",
    "lodash": "^4.17.21",
    "millify": "^6.1.0",
    "msw": "^2.1.7",
    "react": "^18.2.0",
    "react-app-rewired": "^2.2.1",
    "react-contenteditable": "^3.3.7",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
    "react-loading-skeleton": "^3.4.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.22.0",
    "react-scripts": "^5.0.1",
    "sass": "^1.70.0",
    "socket.io-client": "^4.7.4",
    "web-vitals": "^3.5.2"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "lint:check": "eslint 'src/**/*.js'",
    "lint:fix": "eslint 'src/**/*.js' --fix",
    "prettier:check": "prettier --check 'src/**/*.{js,jsx,json}'",
    "prettier:fix": "prettier --write 'src/**/*.{js,jsx,json}'",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --coverage --forceExit --detectOpenHandles --watchAll=false"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "jest-canvas-mock": "^2.5.2",
    "prettier": "^3.2.5",
    "react-app-alias": "^2.2.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/test/*.js?(x)",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "moduleNameMapper": {
      "@components/(.*)": [
        "<rootDir>/src/components/$1"
      ],
      "@services/(.*)": [
        "<rootDir>/src/services/$1"
      ],
      "@hooks/(.*)": [
        "<rootDir>/src/hooks/$1"
      ],
      "@mocks/(.*)": [
        "<rootDir>/src/mocks/$1"
      ],
      "@pages/(.*)": [
        "<rootDir>/src/pages/$1"
      ],
      "@redux/(.*)": [
        "<rootDir>/src/redux-toolkit/$1"
      ],
      "@assets/(.*)": [
        "<rootDir>/src/assets/$1"
      ],
      "@colors/(.*)": [
        "<rootDir>/src/colors/$1"
      ],
      "@root/(.*)": [
        "<rootDir>/src/$1"
      ]
    }
  }
}
